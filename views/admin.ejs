<% include ./partials/header %>

<div class="container">
    <h4>ממשק ניהול</h4>


<form action="/admin/q" method="GET">
    <label>חפש הרשמות</label>
    <input name="search" type="text" placeholder="john@outlook.com / john Doe">
    <button class="btn">חפש</button>
</form>

<h4>תוצאות</h4>
    <% results.forEach((result) => { %>
        <div class="row">
            <div class="col s12 m6">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><%= result.fullName %></span>
                  <p>רישום לקוח: <%= result.date.toDateString() %> </p>
                  <p>מייל: <%= result.email %> </p>
                  <hr>
                  <% result.products.forEach((product)=>{ %>
                    <p>שם מוצר: <%= product.productName %></p>
                    <p>רישום באתר: <%= product.regDate.toDateString() %></p>
                    <p>מס' חשבונית: <%= product.invoice %></p>
                    <p>מס' סידורי: <%= product.serial %></p>
                    <hr>
                  <% })%>
                </div>
                <div class="card-action">
                  <a href="#">This is a link</a>
                  <a href="#">This is a link</a>
                </div>
              </div>
            </div>
          </div>
    <% }); %>
</div>  
<% include ./partials/footer %>