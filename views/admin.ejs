<% include ./partials/header %>

<div class="container">
    <h4>ממשק ניהול</h4>


<form action="/admin/q" method="GET">
    <label>חפש הרשמות</label>
    <input name="search" type="text" placeholder="חפש לפי שם,דואר אלקטרוני או מספר סידורי">
    <button class="btn">חפש</button>
</form>

<h4>תוצאות</h4>
<div class="row">
    <% results.forEach((result) => { %>

            <div class="col s12 m6">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><%= result.fullName %></span>
                  <p>רישום לקוח: <%= result.date.toDateString() %> </p>
                  <p>מייל: <%= result.email %> </p>
                  <p>טלפון: <%= result.phone %> </p>
                  <hr>
                </div>
                <div class="card-action">
                  <button class="btn viewBtn">מוצרים</button>
                  <a href="#">This is a link</a>
                </div>
              </div>
              <div  class="card blue-grey darken-4 viewCnt">
                <div class="card-content white-text">
               <% result.products.forEach((product)=>{ %>
                    <h5>מוצר: <%= product.productName %></h5>
                    <p>נרכש בסניף: <%= product.store %></p>
                    <p>רישום מוצר: <%= product.regDate.toDateString() %></p>
                    <p>מס' חשבונית: <%= product.invoice %></p>
                    <p>מס' סידורי: <%= product.serial %></p>
                    <hr>
                <% }); %>
                </div>
              </div>
            </div>

	<% }); %>
</div>
<!-- End Container -->
</div>

<script src="/scripts/script.js"></script>
<% include ./partials/footer %>